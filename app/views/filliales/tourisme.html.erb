<div class="details-section section-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-12">
        <div id="product-carousel">
          <div class="carousel-image">
            <%= image_tag("agro/1.jpg",  alt: "Image", class: "img-responsive") %>
